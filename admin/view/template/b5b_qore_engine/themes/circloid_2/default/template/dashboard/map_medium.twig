{% if b5b_qore_engine_color_preset %}
	{% if b5b_qore_engine_color_preset == 'mixed' %}
		{% set preset_colors = {0 : '#0e81e3', 1 :'#408adf', 2 :'#a5d4fd'} %}
	{% else %}
		{% set preset_colors = {0 : '#0e81e3', 1 :'#408adf', 2 :'#a5d4fd'} %}
	{% endif %}
{% else %}
	{% set preset_colors = {0 : '#0e81e3', 1 :'#408adf', 2 :'#a5d4fd'} %}
{% endif %}

<div class="col-xs-12 col-sm-6 col-md-8 col-lg-8 map-widget-medium" id="map-medium" data-controller-path="dash_map_medium">

	<link type="text/css" href="view/template/b5b_qore_engine/themes/{{ b5b_qore_engine_active_theme_path }}/plugins/jqvmap/jqvmap.css" rel="stylesheet">
	<link type="text/css" href="view/template/b5b_qore_engine/themes/{{ b5b_qore_engine_active_theme_path }}/plugins/jqvmap/circloid-jqvmap.css" rel="stylesheet">
	
	<script type="text/javascript" src="view/template/b5b_qore_engine/themes/{{ b5b_qore_engine_active_theme_path }}/plugins/jqvmap/jquery.vmap.min.js"></script>
	<script type="text/javascript" src="view/template/b5b_qore_engine/themes/{{ b5b_qore_engine_active_theme_path }}/plugins/jqvmap/maps/jquery.vmap.world.js"></script>

	<div class="panel panel-default block-size-normal">
		<div class="panel-heading">
			<h3 class="panel-title">{{ heading_title }}</h3>
		</div>
		<div class="panel-body" data-canvas-width="569" data-canvas-height="209" data-highest-color="{{ preset_colors.0 }}" data-lowest-color="{{ preset_colors.1 }}" data-bg-color="{{ preset_colors.2 }}" data-label-orders="{{ text_order }}" data-label-sales="{{ text_sale }}">
			<div id="vmap" style="width: 100%; height: 209px;"></div>
		</div>
	</div>
</div>